<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeanTea.RentingPage"
             Title="RentingPage"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials">
    <VerticalStackLayout>
        
        <maps:Map MapType="Street" x:Name="map" MaximumHeightRequest="400"/>

        <Slider x:Name="slider" Maximum="100" Minimum="0" Value="5" />

        <Entry Placeholder="Search..." x:Name="searchEntry" />

        <Button
           x:Name="SearchAreaButton"
           Text="Search Area"            
           Clicked="OnSearchAreaButtonClicked"
           HorizontalOptions="Start" />

        <Label Text="" x:Name="LblLoadingSearch"/>   

    </VerticalStackLayout>
</ContentPage>