<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeanTea.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>


        <Label></Label>
        <Label></Label>

        <Label></Label>

        <Label 
            Text=""
            x:Name="lblSignedUser"
            VerticalOptions="Center" 
            HorizontalOptions="Center" >

        </Label>
        
        
        <Label 
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label></Label>

        <Button  
            x:Name="btnSignIn"
            Clicked="Sign_In_Button_Clicked"
            Text="Sign In or Sign Up"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label></Label>
        <Label></Label>
        <Button  
             x:Name="btnSignOut"
             Clicked="Sign_Out_Button_Clicked"
             Text="Sign Out"
             VerticalOptions="Center" 
             HorizontalOptions="Center"
             IsVisible="false" />
    </VerticalStackLayout>
    
    
</ContentPage>